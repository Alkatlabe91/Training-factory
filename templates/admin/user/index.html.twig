{% extends 'adminbase.html.twig' %}

{% block title %}User index
{% endblock %}

{% block content %}


	<h1>User index</h1>

	<div class="table">
		<table class="table">
			<thead>
				<tr>
					{# <th>Id</th> #}
					{# <th>Email</th>
					<th>Roles</th> #}
					{# <th>Password</th> #}
					<th>Firstname</th>
					<th>Lastname</th>
					<th>Birthday</th>
					<th>Gender</th>
					{# <th>Address</th>
					<th>Postcode</th>
					<th>Residence</th> #}
					<th>Username</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						{# <td>{{ user.id }}</td> #}
						{# <td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
						{# <td>{{ user.password }}</td> #}
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
						<td>{{ user.gender }}</td>
						{# <td>{{ user.address }}</td>
						<td>{{ user.postcode }}</td>
						<td>{{ user.residence }}</td> #}
						<td>{{ user.username }}</td>
						<td>
							<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info">show</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
							
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="13">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<a href="{{ path('app_user_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
